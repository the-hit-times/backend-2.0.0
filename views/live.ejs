        </select>
        <h5 class="text-white">T2 Score</h5>
            <input
              class="form-control"
              required
              style="border-radius: 0px"
              placeholder="Team 2 Score"
              id="T2score"
              type="text"
              name="T2score"
            />
        <br>
            <h5 class="text-white">Match Date:</h5>
            <input type="date" id="mdate" name="mdate">
        <br>
        <br>
            <h3 class="text-white">Timeline</h3>
            <textarea
              id="mytextarea"
              name="body"
              rows="10"
              cols="5"
              placeholder="Body"
            ></textarea>
            <br />
            <button type="submit" class="btn text-white btn-primary roundbth">
              Submit
            </button>
